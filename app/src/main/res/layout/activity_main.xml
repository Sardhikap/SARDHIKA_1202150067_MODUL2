<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.sardhika_1202150067_modul2.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="200sp"
        app:srcCompat="@drawable/munjul"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Pilih Menu"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="173dp" />

    <RadioGroup
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/pesan"
        tools:layout_editor_absoluteX="dp"
        tools:layout_editor_absoluteY="217dp">

        <RadioButton
            android:id="@+id/dine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_below="@+id/imageView"
            android:layout_marginTop="29dp"
            android:checked="false"
            android:duplicateParentState="false"
            android:text="Dine In"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="200dp" />

        <RadioButton
            android:id="@+id/take"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dine"
            android:layout_alignStart="@+id/dine"
            android:layout_below="@+id/dine"
            android:layout_marginTop="25dp"
            android:text="Take Away"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="253dp" />
    </RadioGroup>

    <Button
        android:id="@+id/pesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClicked"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:text="Pesan Sekarang"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="346dp" />

</RelativeLayout>
